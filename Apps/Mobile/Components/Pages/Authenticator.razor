@page "/auth"
@using Mobile.Source
@inject NavigationManager NavigationManager
@inject IPreferences Preferences
@inject SharedState SharedState

<div class="auth-container">
    <h1>Welcome!</h1>
    <p>Please enter your username to continue</p>

    <input @bind="m_username" placeholder="Enter your username" class="auth-input" />

    <button @onclick="SaveUsername" class="auth-button">Continue</button>
</div>

@code {
    private string m_username = string.Empty;
    protected override void OnInitialized()
    {
        string username = Preferences.Get("Username", string.Empty);
        if (string.IsNullOrWhiteSpace(username)) return;

        NavigationManager.NavigateTo("booking");

    }

    private void SaveUsername()
    {
        if(string.IsNullOrWhiteSpace(m_username)) return;
        Preferences.Set("Username",m_username.Trim());
        SharedState.SetIsMe();
        NavigationManager.NavigateTo("booking");
    }
}

<style>
    .auth-container {
        padding: 20px;
        max-width: 500px;
        margin: 0 auto;
        text-align: center;
    }

    .auth-input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .auth-button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>